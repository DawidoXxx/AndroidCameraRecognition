<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MqttConnectorFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/server_url_text_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:layout_margin="12dp"
            android:ems="10"
            android:inputType="textUri"
            android:hint="@string/server_uri"/>

        <EditText
            android:id="@+id/topic_text_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:layout_margin="12dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/topic" />

        <EditText
            android:id="@+id/user_login_text_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:ems="10"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:hint="@string/user_name" />

        <EditText
            android:id="@+id/password_text_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:ems="10"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:hint="@string/password" />


        <Button
            android:id="@+id/connect_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:text="Connect" />

        <Button
            android:id="@+id/clear_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:text="Clear" />

        <Button
            android:id="@+id/prefil_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:text="PREFILL" />

    </LinearLayout>


</FrameLayout>